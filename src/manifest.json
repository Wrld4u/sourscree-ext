{
  "manifest_version": 2,
  "name": "Selecty CRM",
  "description": "Selecty CRM",
  "version": "2.1",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "*://*/*",
    "webRequest",
    "tabs", 
    "activeTab",
    "storage"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}